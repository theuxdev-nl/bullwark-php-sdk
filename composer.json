{
  "name": "theuxdev/bullwark-php-sdk",
  "description": "PHP SDK for integration of the Bullwark Authentication serviice.",
  "license": "MIT",
  "type": "library",
  "autoload": {
    "psr-4": {
      "BullwarkSdk\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Paul 'Bull' Brouwer",
      "email": "paul@theuxdev.com"
    }
  ],
  "require": {
    "php": ">=7.4",
    "ext-openssl": "*",
    "ext-json": "*",
    "firebase/php-jwt": "^6.11",
    "php-http/discovery": "^1.20",
    "psr/http-client": "^1.0",
    "psr/http-factory": "^1.0"
  },
  "suggest": {
    "guzzlehttp/guzzle": "^7.0 - Recommended PSR-18 HTTP client implementation",
    "guzzlehttp/psr7": "^2.0 - Recommended PSR-7/PSR-17 implementation"
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    }
  },
  "require-dev": {
    "guzzlehttp/guzzle": "^7.10",
    "guzzlehttp/psr7": "^2.8"
  }
}
